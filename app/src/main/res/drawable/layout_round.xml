<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFB"/>
            <stroke
                android:width="2.3dp"
                android:color="#E6E6FA" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="#FFFFFB"/>
            <stroke
                android:width="2.3dp"
                android:color="#E6E6FA" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFB"/>
            <stroke
                android:width="2.3dp"
                android:color="#E6E6FA" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FFFFFB"
                android:centerColor="#FFFFFB"
                android:endColor="#FFFFFB"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#E6E6FA" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>

</selector>